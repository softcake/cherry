<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.1//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>
    <suppress checks="JavadocStyleCheck" files="(.*Tests*|Mock.*|Test.*|Jmh.*)\.java"/>
    <suppress checks="JavadocStyle" files="(.*Tests*|Mock.*|Test.*|Jmh.*)\.java"/>
    <suppress checks="JavadocStyle" files=".*[\\/]documentation[\\/]"/>
    <suppress checks="JavadocStyleCheck" files=".*[\\/]documentation[\\/]"/>
    <suppress checks="JavadocMethod" files="(.*Tests*|Mock.*|Test.*|Jmh.*)\.java"/>
    <suppress checks="JavadocMethod" files=".*[\\/]documentation[\\/]"/>
    <suppress checks="Javadoc" files=".*[\\/]src[\\/](test|integTest|jmh)[\\/]"/>
    <suppress checks="Javadoc" files=".*[\\/]documentation[\\/]"/>
    <suppress checks="MagicNumber" files=".*[\\/]src[\\/](test|integTest|jmh)[\\/]"/>
    <suppress checks="UncommentedMain" files=".*[\\/]src[\\/](test|integTest|jmh)[\\/]"/>
    <suppress checks="JavadocPackage" files=".*[\\/]src[\\/](test|integTest|jmh)[\\/]"/>
    <suppress checks="JavadocPackage" files=".*[\\/]documentation[\\/]"/>
    <suppress checks="RedundantModifier" files=".*[\\/]src[\\/](test|integTest|jmh)[\\/]"/>
    <!--<suppress checks="JavadocType" files="(.*Tests*|Mock.*|Test.*)\.java"/>-->
    <suppress checks="JavadocVariable" files="(.*Tests*|Mock.*|Test.*|Jmh.*)\.java"/>
    <suppress id="MethodNameRegular" files="[\\/]src[\\/](test|integTest|jmh)[\\/].*"/>
    <suppress id="MethodNameTest" files="[\\/]src[\\/]main[\\/].*"/>
    <suppress checks="MethodCount" files=".*[\\/]src[\\/](test|integTest|jmh)[\\/]"/>
</suppressions>

